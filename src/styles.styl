html
body
  margin: 0
  font-size: 62.5%
  font-family: Helvetica, sans-serif

body
  background: #fafafa
  color: #444
  font-size: 1.4rem

.wrapper
  max-width: 1000px
  width: 100%
  margin: 0 auto

*
  box-sizing: border-box

h1
h2
  font-weight: 300
  margin: 0 0 10px

h1
  font-size: 2.8rem

h2
  font-size: 2.4rem

p
  margin: 0

input
button
  outline: none

input
  border: 0
  background: none

button
  padding: 0
  border: 0
  background: none
  cursor: pointer

.btn
  font-weight: 400
  padding: 5px 15px
  border-radius: 3px
  font-size: 1.2rem
  transition: background-color .2s ease-in-out
  &-primary
    background: #007bff
    color: #fff
    &:hover
      background: #0069d9
  &-danger
    background: #dc3545
    color: #fff
    &:hover
      background: #c82333
