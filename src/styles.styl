html
body
  margin: 0
  font-size: 62.5%
  font-family: Helvetica, sans-serif

body
  background: #fafafa
  color: #444
  font-size: 1.4rem
  padding: 15px

.wrapper
  max-width: 1000px
  width: 100%
  margin: 0 auto

*
  box-sizing: border-box

h1
h2
  font-weight: 300
  margin: 0 0 10px

h1
  font-size: 2.8rem

h2
  font-size: 2.4rem

p
  margin: 0

input
button
  outline: none

input
  border: 0
  background: none

button
  padding: 0
  border: 0
  background: none
  cursor: pointer

.btn
  font-weight: 400
  padding: 5px 15px
  border-radius: 3px
  font-size: 1.2rem
  transition: background-color .2s ease-in-out, opacity .2s ease-in-out
  &-primary
    background: #007bff
    color: #fff
    &:hover
      background: #0069d9
  &-danger
    background: #dc3545
    color: #fff
    &:hover
      background: #c82333
  &[disabled]
    cursor: not-allowed
    opacity: 0.5

.input
  flex-grow: 1
  padding: 0 10px
  font-size: 1.2rem
  &__text
    padding: 5px 10px
    background: #e9ecef
    border-right: 1px solid #ced4da
    font-size: 1.2rem
  &__label
    display: flex
    align-items: center
  &__wrapper
    margin: 10px
    display: block
    border: 1px solid #ced4da
    border-radius: 3px
    background: #fff
    &.invalid
      border-color: #f5c6cb

  &__info
    border-top: 1px solid #ced4da
    font-size: 1rem
    padding: 10px
    &._error
      color: red
